# Environment Configuration Example
# Copy this file to .env and update with your actual values

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# API Keys (if needed for external services)
GWOSC_API_KEY=
ZTF_API_KEY=
TNS_API_KEY=
HEASARC_API_KEY=

# Database Configuration (if using a database)
DATABASE_URL=sqlite:///./surya_kiran.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/surya_kiran.log

# Analysis Configuration
DEFAULT_CONFIDENCE_THRESHOLD=0.1
DEFAULT_MAX_ANGULAR_SEPARATION=10.0
DEFAULT_MAX_TIME_SEPARATION=72.0

# Data Collection Limits
DEFAULT_GW_LIMIT=15
DEFAULT_ZTF_LIMIT=20
DEFAULT_TNS_LIMIT=15
DEFAULT_GRB_LIMIT=15

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Storage
EXPORT_DIR=./exports
UPLOAD_DIR=./uploads
